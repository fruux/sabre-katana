{
    "name"       : "sabre/katana",
    "type"       : "project",
    "description": "A CalDAV, CardDAV and WebDAV ready-to-use server on top of sabre/dav",
    "homepage"   : "http://sabre.io/katana/",
    "license"    : "BSD-3-Clause",
    "require"    : {
        "php"            : ">=5.4.7",
        "ext-spl"        : "*",
        "ext-pdo"        : "~1.0",
        "ext-phar"       : "~2.0, >=2.0.2",
        "sabre/dav"      : "~2.1",
        "sabre/uri"      : "~1.0",
        "hoa/core"       : "~2.0@dev",
        "hoa/console"    : "~2.0",
        "hoa/dispatcher" : "~0.0",
        "hoa/eventsource": "~2.0@dev",
        "hoa/iterator"   : "~1.0",
        "hoa/mime"       : "~2.0",
        "hoa/file"       : "~0.0",
        "hoa/router"     : "~2.0",
        "hoa/string"     : "~2.0",
        "pimple/pimple"  : "~3.0"
    },
    "suggest": {
        "ext-pdo_sqlite": "If you decide to use SQLite.",
        "ext-pdo_mysql" : "If you decide to use MySQL."
    },
    "authors": [
        {
            "name": "fruux"
        }
    ],
    "support": {
        "forum" : "http://groups.google.com/group/sabredav-discuss",
        "source": "https://github.com/fruux/sabre-katana/"
    },
    "require-dev": {
        "atoum/atoum"              : "~2.0",
        "atoum/praspel-extension"  : "~0.1",
        "atoum/ruler-extension"    : "~1.0, >=1.0.2",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "Sabre\\Katana\\": "lib/"
        }
    },
    "bin": ["bin/katana"],
    "config": {
        "bin-dir"   : "bin/"
    }
}
