{
    "name"       : "sabre/katana",
    "type"       : "project",
    "description": "A CalDAV, CardDAV and WebDAV ready-to-use server on top of sabre/dav",
    "homepage"   : "http://sabre.io/katana/",
    "license"    : "AGPL-3.0",
    "authors"    : [
        {
            "name": "fruux"
        }
    ],
    "support": {
        "forum" : "http://groups.google.com/group/sabredav-discuss",
        "source": "https://github.com/fruux/sabre-katana/"
    },
    "require": {
        "php"                      : ">=5.4.7",
        "ext-spl"                  : "*",
        "ext-pdo"                  : "~1.0",
        "sabre/dav"                : "2.2alpha4",
        "sabre/uri"                : "~1.0",
        "sabre/http"               : "4.0.0alpha1",
        "hoa/core"                 : "~2.0",
        "hoa/console"              : "~2.0",
        "hoa/dispatcher"           : "~0.0",
        "hoa/eventsource"          : "~2.0",
        "hoa/iterator"             : "~1.0",
        "hoa/mime"                 : "~2.0",
        "hoa/file"                 : "~0.0",
        "hoa/router"               : "~2.0",
        "hoa/string"               : "~2.0",
        "ircmaxell/password-compat": "~1.0"
    },
    "require-dev": {
        "ext-phar"                 : "~2.0, >=2.0.2",
        "atoum/atoum"              : "~2.0",
        "atoum/praspel-extension"  : "~0.1",
        "atoum/ruler-extension"    : "~1.0, >=1.0.2",
        "squizlabs/php_codesniffer": "*"
    },
    "suggest": {
        "ext-pdo_sqlite": "If you decide to use SQLite.",
        "ext-pdo_mysql" : "If you decide to use MySQL."
    },
    "autoload": {
        "psr-4": {
            "Sabre\\Katana\\": "lib/"
        }
    },
    "bin": ["bin/katana"],
    "config": {
        "bin-dir"            : "bin/",
        "vendor-dir"         : "data/lib/",
        "optimize-autoloader": true
    }
}
